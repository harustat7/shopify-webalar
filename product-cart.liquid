{% comment %}
  product-card.liquid
  This file is based on the requirements for the Shopify Liquid Coding Assignment
{% endcomment %}

{% if product %}
  <div class="product-card">
    <div class="product-card__image-container">
      <a href="{{ product.url | within: collection }}">
        <img 
          src="{{ product.featured_image | img_url: 'medium' }}" 
          alt="{{ product.featured_image.alt | escape }}"
          class="product-card__image"
        >
      </a>
      
      <!-- TASK 1: Dynamic Product Badge -->
      <div class="badge-container">
        {% if product.price < 50000 %}
          <div class="badge budget-badge">
            <span>Budget Pick</span>
          </div>
        {% endif %}

        {% if product.variants.first.inventory_quantity < 5 and product.variants.first.inventory_quantity > 0 %}
          <div class="badge stock-badge">
            <span>Limited Stock</span>
          </div>
        {% endif %}
      </div>
    </div>
    
    <div class="product-card__info">
      <h3 class="product-card__title">
        <a href="{{ product.url | within: collection }}">
          {{ product.title | escape }}
        </a>
      </h3>
      
      <div class="product-card__price">
        {% if product.compare_at_price > product.price %}
          <span class="product-card__price--sale">{{ product.price | money }}</span>
          <s class="product-card__price--regular">{{ product.compare_at_price | money }}</s>
        {% else %}
          <span class="product-card__price--regular">{{ product.price | money }}</span>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}

<style>
  .product-card {
    position: relative;
    margin-bottom: 20px;
  }
  
  .product-card__image-container {
    position: relative;
    margin-bottom: 10px;
  }
  
  .product-card__image {
    width: 100%;
    display: block;
  }
  
  .badge-container {
    position: absolute;
    top: 10px;
    left: 10px;
    z-index: 2;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }
  
  .badge {
    padding: 5px 10px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: bold;
    color: white;
    text-align: center;
  }
  
  .budget-badge {
    background-color: #3498db;
  }
  
  .stock-badge {
    background-color: #e74c3c;
  }
  
  .product-card__title {
    margin: 0 0 5px;
    font-size: 16px;
  }
  
  .product-card__title a {
    color: #333;
    text-decoration: none;
  }
  
  .product-card__price--sale {
    color: #e74c3c;
    font-weight: bold;
    margin-right: 5px;
  }
  
  .product-card__price--regular {
    color: #333;
  }
</style>
