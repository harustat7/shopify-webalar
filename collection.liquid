{% comment %}
  collection.liquid
  This file is based on the requirements for the Shopify Liquid Coding Assignment
{% endcomment %}

<div class="page-width">
  <div class="collection-header">
    <h1>{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="rte">
        {{ collection.description }}
      </div>
    {% endif %}
  </div>
  
  <!-- TASK 2: Custom Collection Filter -->
  <div class="collection-filter">
    <label for="tag-filter">Filter by:</label>
    <select id="tag-filter" class="tag-filter">
      <option value="">All Products</option>
      <option value="best-seller">Best Sellers</option>
      <option value="new-arrival">New Arrivals</option>
      <option value="discounted">Discounted</option>
    </select>
  </div>

  <div class="collection-products">
    {% paginate collection.products by 12 %}
      <div class="product-grid">
        {% for product in collection.products %}
          {% if current_tags == empty or product.tags contains current_tags %}
            <div class="grid-item">
              {% include 'product-card', product: product %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
      
      {% if paginate.pages > 1 %}
        <div class="pagination">
          {{ paginate | default_pagination }}
        </div>
      {% endif %}
    {% endpaginate %}
  </div>
</div>

<script>
  document.getElementById('tag-filter').onchange = function() {
    if (this.value === '') {
      window.location.href = '{{ collection.url }}';
    } else {
      window.location.href = '{{ collection.url }}/{{ this.value }}';
    }
  };
  
  // Set the dropdown to the current tag if one is selected
  {% if current_tags %}
    document.getElementById('tag-filter').value = '{{ current_tags }}';
  {% endif %}
</script>

<style>
  .collection-header {
    margin-bottom: 30px;
    text-align: center;
  }
  
  .collection-filter {
    display: flex;
    align-items: center;
    margin-bottom: 30px;
  }
  
  .tag-filter {
    margin-left: 10px;
    padding: 8px 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
  }
  
  .product-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 20px;
  }
  
  @media screen and (min-width: 768px) {
    .product-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media screen and (min-width: 992px) {
    .product-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  
  .pagination {
    margin-top: 30px;
    text-align: center;
  }
</style>
